    "docker-fresh": "docker system prune && docker volume prune",
    "hasura-init-migrations": "hasura init --directory hasura --endpoint http://localhost:8002",
    "hasura-create-migration": "hasura migrate create \"init\" --from-server --admin-secret mysecret",
    "hasura-migrate-status": "hasura migrate status",
    "hasura-migrate-all": "hasura migrate apply --endpoint  http://localhost:8002",
